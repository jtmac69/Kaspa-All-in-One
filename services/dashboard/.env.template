# Kaspa Dashboard Environment Configuration Template
# Copy this file to .env and customize the values for your installation

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Node.js environment (production, development, test)
NODE_ENV=production

# Port for the dashboard to listen on
PORT=8080

# Kaspa node RPC URL
KASPA_NODE_URL=http://localhost:16111

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WALLET_MAX_REQUESTS=10
RATE_LIMIT_SERVICE_CONTROL_MAX_REQUESTS=20
RATE_LIMIT_LOGS_MAX_REQUESTS=50

# SSL/TLS Configuration (optional)
# SSL_CERT_PATH=/path/to/certificate.pem
# SSL_KEY_PATH=/path/to/private-key.pem
# FORCE_HTTPS=false

# Session configuration (if authentication is enabled)
# SESSION_SECRET=your-secret-key-here
# SESSION_TIMEOUT=3600000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path (optional - logs to journald by default)
LOG_FILE=/opt/kaspa-dashboard/logs/dashboard.log

# Enable request logging
REQUEST_LOGGING=true

# Log rotation settings
LOG_MAX_SIZE=10M
LOG_MAX_FILES=5

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================

# WebSocket heartbeat interval (milliseconds)
WS_HEARTBEAT_INTERVAL=30000

# Maximum WebSocket connections
WS_MAX_CONNECTIONS=100

# WebSocket connection timeout
WS_CONNECTION_TIMEOUT=60000

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Response cache TTL (milliseconds)
CACHE_TTL=30000

# Maximum cache size (number of entries)
MAX_CACHE_SIZE=100

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=10

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Enable compression
ENABLE_COMPRESSION=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Resource monitoring interval (milliseconds)
RESOURCE_MONITOR_INTERVAL=5000

# Service health check interval (milliseconds)
SERVICE_MONITOR_INTERVAL=5000

# Alert thresholds
CPU_WARNING_THRESHOLD=80
CPU_CRITICAL_THRESHOLD=90
MEMORY_WARNING_THRESHOLD=85
MEMORY_CRITICAL_THRESHOLD=90
DISK_WARNING_THRESHOLD=80
DISK_CRITICAL_THRESHOLD=90
LOAD_CRITICAL_THRESHOLD=10.0

# Enable automatic resource monitoring
AUTO_RESOURCE_MONITORING=true

# =============================================================================
# WIZARD INTEGRATION
# =============================================================================

# Installation wizard URL
WIZARD_URL=http://localhost:3000

# Wizard communication timeout
WIZARD_TIMEOUT=300000

# Enable wizard integration
WIZARD_INTEGRATION_ENABLED=true

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker socket path
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Docker API version
DOCKER_API_VERSION=1.41

# Docker command timeout (milliseconds)
DOCKER_COMMAND_TIMEOUT=30000

# =============================================================================
# DATABASE CONFIGURATION (if applicable)
# =============================================================================

# Database connection URL (for configuration storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/dashboard

# Database connection pool size
# DATABASE_POOL_SIZE=10

# Database connection timeout
# DATABASE_TIMEOUT=5000

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup directory
BACKUP_DIR=/opt/kaspa-dashboard/backups

# Maximum backup files to keep
MAX_BACKUP_FILES=10

# Backup compression level (0-9)
BACKUP_COMPRESSION_LEVEL=6

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable debug mode (development only)
DEBUG_MODE=false

# Enable API documentation endpoint
ENABLE_API_DOCS=false

# Enable performance profiling
ENABLE_PROFILING=false

# Mock external services (development/testing)
MOCK_SERVICES=false

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Custom configuration file path
# CUSTOM_CONFIG_PATH=/opt/kaspa-dashboard/config/custom.json

# Plugin directory
# PLUGIN_DIR=/opt/kaspa-dashboard/plugins

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Timezone for logs and timestamps
TZ=UTC

# =============================================================================
# NOTES
# =============================================================================

# 1. Lines starting with # are comments and will be ignored
# 2. Remove the # at the beginning of a line to enable that setting
# 3. Boolean values should be: true, false (lowercase)
# 4. Numeric values should not be quoted
# 5. String values with spaces should be quoted
# 6. Restart the service after changing this file: sudo systemctl restart kaspa-dashboard