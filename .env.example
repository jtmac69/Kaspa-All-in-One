# Kaspa All-in-One Environment Configuration

# ============================================================================
# KASPA NODE CONFIGURATION
# ============================================================================

# Choose your node mode:
# - "local": Run your own Kaspa node (requires 8GB+ RAM)
# - "remote": Use a public Kaspa node (recommended for low-memory systems)
KASPA_NODE_MODE=remote

# Remote Kaspa Node URL (used when KASPA_NODE_MODE=remote)
# Public options:
#   - https://api.kaspa.org (recommended)
#   - https://kaspa.aspectron.org
#   - http://your-own-remote-node:16111
REMOTE_KASPA_NODE_URL=https://api.kaspa.org

# Local Node Ports (used when KASPA_NODE_MODE=local)
KASPA_NODE_P2P_PORT=16110
KASPA_NODE_RPC_PORT=16111

# ============================================================================
# DASHBOARD CONFIGURATION
# ============================================================================

DASHBOARD_PORT=8080

# ============================================================================
# SERVICE PORTS
# ============================================================================

# Explorer Profile
KASIA_INDEXER_PORT=3002
KASIA_APP_PORT=3001
KSOCIAL_INDEXER_PORT=3004
KSOCIAL_APP_PORT=3003
SIMPLY_INDEXER_PORT=3005

# Production Profile
STRATUM_PORT=5555

# Database
POSTGRES_PORT=5432
POSTGRES_USER=indexer
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=kaspa_indexers

# Archive Profile
ARCHIVE_POSTGRES_PORT=5433
ARCHIVE_POSTGRES_USER=archiver
ARCHIVE_POSTGRES_PASSWORD=archive_password
ARCHIVE_POSTGRES_DB=kaspa_archive

# Development Profile
PORTAINER_PORT=9000
PGADMIN_PORT=9001
PGADMIN_EMAIL=admin@kaspa-aio.local
PGADMIN_PASSWORD=admin

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

KASPA_NETWORK=mainnet
PUBLIC_NODE=true
LOG_LEVEL=info

# ============================================================================
# NGINX CONFIGURATION
# ============================================================================

HTTP_PORT=80
HTTPS_PORT=443
